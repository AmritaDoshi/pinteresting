<p id="notice"><%= notice %></p>

<h1>Listing Pins</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Description</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td><%= image_tag pin.image.url(:thumb) %></td>
        <td><%= pin.description %></td>
        <td><%= pin.user.email if pin.user %></td>
        <div class="form-group">
          <td><%= link_to 'Show', pin, class: "btn btn-default" %></td>
          <td><%= link_to 'Edit', edit_pin_path(pin), class: "btn btn-default" %></td>
          <td><%= link_to 'Destroy', pin, method: :delete, class: "btn btn-default", data: { confirm: 'Are you sure?' } %></td>
        </div>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
<%= link_to 'New Pin', new_pin_path %>
<% end %>
