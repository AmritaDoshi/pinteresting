<div id="pins" class="transitions-enabled">
  <% @pins.each do |pin| %>
    <div class="box panel-default">
      <%= image_tag pin.image.url(:medium) %>
      <div class="panel-body">
        <%= pin.description %>
        <%= pin.user.email if pin.user %>
        <div class="form-group">
          <%= link_to 'Show', pin, class: "btn btn-default" %>
          <% if pin.user == current_user %>
            <%= link_to 'Edit', edit_pin_path(pin), class: "btn btn-default" %>
            <%= link_to 'Destroy', pin, method: :delete, class: "btn btn-default", data: { confirm: 'Are you sure?' } %>
              <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<br>


